	printf("Input data from gets() by standard input:\n");
	file = fopen("temp.dat","w"); /* open a file for writing */
	scanf("%s", string);
	printf("%s\n",string);
	fputs(string, file);
	fclose(file);
	/**  Output data from file to standard screen. **/
	printf("Output data from puts() to standard screen:\n");
	file = fopen("temp.dat","r");
	while(fgets(string, 80, file) != NULL)
		puts(string);
	fclose(file);
}
